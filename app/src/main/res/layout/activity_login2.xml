<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/textt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merienda"
        android:text="@string/hh"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,UnknownIdInLayout" />

    <TextView
        android:id="@+id/texttt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/merienda"
        android:text="@string/hhh"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/textt"
        tools:ignore="MissingConstraints,UnknownIdInLayout" />

    <EditText
        android:id="@+id/jk"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/mate"
        android:hint="   Phone, email or username"
        android:layout_margin="20dp"
        android:inputType="text"
        android:textColor="@color/black"
        android:paddingStart="6dp"
        android:textColorHint="@color/white"
        android:alpha="0.9"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/texttt"
         />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:paddingStart="6dp"
        android:alpha="0.9"
        android:layout_height="55dp"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/mate"
        android:hint="   Password"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/jk"
         />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/butqn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mate"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="@color/bcc"
        android:textSize="15sp"
        android:background="@drawable/rounded_c"
        android:textStyle="normal"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
         />

    <TextView
        android:id="@+id/r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:alpha="1"
        android:fontFamily="@font/mate"
        android:padding="20dp"
        android:text="Don't have an account ?"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butqn"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/vb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="104dp"
        android:fontFamily="@font/mate"
        android:padding="20dp"
        android:text="Register"
        android:textColor="@color/yelloe"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butqn"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:fontFamily="@font/mate"
        android:text="Continue with Google"
        android:textAllCaps="false"
        android:drawableStart="@drawable/googl"
        android:layout_margin="20dp"
        android:textColor="@color/bcc"
        android:textSize="15sp"
        android:background="@drawable/rounded_c"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/r" />




</androidx.constraintlayout.widget.ConstraintLayout>