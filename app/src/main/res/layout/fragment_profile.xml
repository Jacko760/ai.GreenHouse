<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bcc"
    tools:context=".ProfileFragment">

    <androidx.appcompat.widget.Toolbar
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbarprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merienda"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:text="PhyTech"
            android:textSize="30sp"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="2dp" />


    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/profilelogo"
        app:layout_constraintTop_toTopOf="@+id/toolbarprofile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/logoo"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/profilelogo"
        android:id="@+id/display_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/etgardenName"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:textSize="24sp" />
    <EditText
        android:id="@+id/etgardenName"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profilelogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_medium"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:textAlignment="center"
        android:hint="Garden Name"/>


</androidx.constraintlayout.widget.ConstraintLayout>